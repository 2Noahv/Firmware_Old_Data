# #define F_CPU 16000000UL
#define OC1B PB2
#include <avr/io.h>
#include <avr/interrupt.h>


int main(void)
{
    DDRB = OC1B						// PB2 = OC1B 출력 핀으로 설정
	
	TCCR1A = 1<<WGM10;				// 타이머/카운터1 위상정정 pwm 파형 발생모드
	TCCR1A |= 1<<COM1A1;			// 타이머/카운터1 OC1A/OC1B 비교시 0
	TCCR1B |= 1<<CS11 | 1<<CS10;	// 타이머/카운터1 프리스케일러 분주비 = 64
									// 1/16M * * 프리스케일 
	
	ADCSRA |= 1<<ADEN | 1<<ADATE |	1<<ADIE | 7; 
	//ADC활성화, ADC 자동 트리거 활성화, ADC 인터럽트 활성화, 분주비 128
	sei();
	
	ADCSRA |= 1<ADSC;
    while (1) 
    {
		;
    }
}

